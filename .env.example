# This is an example environment file.
# Copy this file to a new file named .env and fill in your actual credentials.

NODE_ENV=development
PORT=5000
JWT_SECRET=your_super_secret_jwt_key_here
MONGO_URI=your_mongodb_connection_string_here

# Optional: You can add Razorpay keys if you implement payment processing
RAZORPAY_KEY_ID=
RAZORPAY_KEY_SECRET=

# Pagination settings
PAGINATION_MAX_LIMIT=12

# Email Configuration (Example for Gmail)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your_16_digit_google_app_password_here
EMAIL_FROM=Your Name <your-email@gmail.com>
